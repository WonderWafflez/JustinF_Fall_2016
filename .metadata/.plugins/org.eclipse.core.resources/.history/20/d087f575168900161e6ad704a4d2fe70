import java.util.*;
public class ProcessingNumber {
	public static void main(String[] args){
		Scanner userInput = new Scanner (System.in);
		System.out.print("How many numbers would you like to input? : ");
		int cycles = userInput.nextInt();
		int evenSum = 0;
		System.out.print("Please enter your numbers : ");
		int nextNum = userInput.nextInt();
		int highest = nextNum;
		int lowest = nextNum;
		boolean even = false;
		int highestEven = 12345;
		for (int i = 2; i <= cycles; i++){
			nextNum = userInput.nextInt();
			if (nextNum > highest){
				highest = nextNum;
			}
			else if (nextNum < lowest){
				lowest = nextNum;
			}
			if (nextNum % 2 == 0){
				evenSum += nextNum;
				if (!even){
					highestEven = nextNum;
					even = true;
				}
				else if (nextNum > highestEven){
					highestEven = nextNum;
				}
			}
		}
		System.out.println("----------------------------------------------");
		if (even){
			System.out.println("The highest even number is " + highestEven);
			System.out.println("The total of the even numbers is " + evenSum);
		}
		else{
			System.out.println("No even numbers entered.");
		}
		System.out.println("The highest number is " + highest);
		System.out.println("The lowest number is " + lowest);
		System.out.println("----------------------------------------------");
	}
}
